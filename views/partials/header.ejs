<body>
    <a class href="#">Some Links For Hot Items</a>
    <nav class="navbar navbar-inverse  navbar-fixed-top">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header ">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
                <a class="navbar-brand logo_text" href="/"><u>J</u>obley.in </a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="#">Home<span class="sr-only">(current)</span></a></li>
                    <li><a href="/Jobley_aboutus">About Us</a></li>
                    <li><a href="#">Upcoming Jobs</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">More<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Results</a></li>
                            <li><a href="#">Current Openings</a></li>
                            <li><a href="#"> Job Near By You</a> </li>
                            <li role="separator" class="divider"></li>
                            <li><a href="#">Follow Us</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="#">Ask Questions</a></li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <% if(!user){%>
                        <li><a href="/Jobley_signup">SignUp <i class="fa fa-lg fa-user-plus" aria-hidden="true"></i></a></li>
                        <li><a href="/Jobley_login">LogIn <i class="fa fa-lg fa-user" aria-hidden="true"></i></a></li>
                        <%}else{%>
                            <li><a>Signed In As <%= user.firstname%></a> </li>
                            <li><a href="/Jobley_logout">Log Out <i class=" fa fa-lg fa-sign-out" aria-hidden="true"></i></a></li>
                            <%}%>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>
    <hr class="top_line">
    <div class="container">
        <%if(error && error.length > 0){%>
        <div class="alert alert-danger" role="alert">
            <%=error%>
        </div>
        <%}%>
        <%if(success && success.length > 0){%>
        <div class="alert alert-success" role="alert">
            <%=success%>
        </div>
        <%}%>
    </div>